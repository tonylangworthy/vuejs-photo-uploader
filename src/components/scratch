                <div v-for="image in imageList" :key="image.index">
                    <div class="uk-card uk-card-small uk-card-default uk-flex uk-flex-left"
                    @mouseenter="image.isHovering = true"
                    @mouseleave="image.isHovering = false"
                    @dblclick="handleSelectedImage(image)"
                    @mousedown="showImagePreview(image)"
                    :class="[{'hovering': image.isHovering}, {'uk-background-primary': image.isSelected}]">
                        <div class="uk-card-media-left">
                            <div class="preview-card">
                                <img :src="image.data" width="125" />
                            </div>
                        </div>
                        <div>
                            <div class="uk-card-body">
                                <div class="uk-text-meta"><strong>{{ image.name.length > 15 ? image.name.slice(0, 15) + '...' : image.name }}</strong></div>
                                <div class="uk-text-meta">{{ image.size }} KB</div>
                                <div class="uk-text-meta">{{ image.fileOrder }}</div>
                            </div>
                        </div>
                    </div>
                </div>
